# frozen_string_literal: true
#!/usr/bin/env ruby

# Player class being initialised
puts ' Welcome to Tic Tac Toe! '
class Player
  attr_reader :character
  attr_accessor :name
  attr_reader :position

  def initialize(name: name, character: character, position: position)
    @name = name
    @character = character
    @position = position
  end

  def player_unit
      player = [ ]
      puts "player1 Type in you name"
      puts player1 = gets.to_i
      player[player1]
      puts "player type in your name"
      player2 = gets.to_i
      player.push(player2)
      player.each do |current|
        current_player = current
        puts current_player
      end
  end

  def display_board(board)
  # This should be a move class:
  if player_unit.current_player == player_unit.player2
    puts "Player 2 Select a number between 0 - 8 to make a move"
    position = gets.strip
    character = "0"
    board[position.to_i] = character
    player_unit.player2[display_board.position] 
  else
    puts "Player1 Select a number between 0 - 8 to make a move"
    position = gets.strip
    character = "X"
    board[position.to_i] = character
    player_unit.player1[position]
  end

  #The board and populating it:
    puts " #{board[0]}  |  #{board[1]}  | #{board[2]} "
    puts '-------------'
    puts " #{board[3]}  |  #{board[4]}  | #{board[5]} "
    puts '-------------'
    puts " #{board[6]}  |  #{board[7]}  | #{board[8]} "
  end

  def new_player(name)
    Player.new(name)
  end

  def start
    puts "Type in your move"
  end
end
board = [" "," ", " ", " ", " ", " ", " ", " ", " "]
playing = Player.new(name: 'Kajura', character: 'X', position: 'here"')
playing.display_board(board)
puts 'sorted'
puts playing.name, playing.character