#!/usr/bin/env ruby

# Player class being initialised
puts 'Welcome to Tic Tac Toe!'
class Player
  attr_reader :character
  attr_accessor :name

  def initialize(name: name, character: character)
    @name = name
    @character = character
  end

  def makes_move
    puts 'moved to the left'
  end

  # def setin_name(name)
  #   @name = name
  # end
end
playing = Player.new(name: 'Kajura', character: 'X')
playing.makes_move
puts 'sorted'
puts playing.name, playing.character

