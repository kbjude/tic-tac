#!/usr/bin/env ruby

# Player class being initialised
class Player
  attr_reader :character
  attr_reader :name

  def initialize(name, character)
    @name = name
    @character = character
  end
end

# Game interface
class Interface
  def initialize(name, character)
    @name = name
    @character = character
  end

  def move(player = Player.name, position)
    # Cordinates of the player on postion
    @player = player
    @position = position
  end

  def display; end

  def start
    player1 = Player.new(nil, 'first')
    player2 = Player.new(player1, 'second')
    current = player1
  end

  def player_input
    puts 'Please type you input'
    gets.to_i
  end
  def game_completion; end
end